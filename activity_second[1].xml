<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Homework8 Header -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#7CBF728C"
        android:text="     Homework 8"
        android:textAlignment="textStart"
        android:textColor="#C30075"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Return Button -->
    <Button
        android:id="@+id/returnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- USD group -->
    <EditText
        android:id="@+id/usdInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter amount in USD"
        android:inputType="numberDecimal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/returnButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/fromUSDButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From USD"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/usdInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Exchange input group -->
    <EditText
        android:id="@+id/exchangeInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter exchange amount"
        android:inputType="numberDecimal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/fromUSDButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/toUSDButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To USD"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/exchangeInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Exchange result -->
    <EditText
        android:id="@+id/exchangeEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Exchange result"
        android:inputType="none"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/toUSDButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
